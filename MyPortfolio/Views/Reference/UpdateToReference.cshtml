@model Reference
@{
    ViewData["Title"] = "UpdateToReference";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referanslar</h4>
		<div class="row">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Güncelleme Sayfası</div>
					</div>
					<div class="card-body">
					<form method="post">
						<input type="hidden" asp-for="ReferenceId"/>
						<label>Başlık</label>
						<input type="text" asp-for="Title"class="form-control"/>
						<br />
							<label>Açıklama</label>
							<input type="text" asp-for="Description" class="form-control" />
							<br />
							<button class="btn btn-success">Referans Güncelle</button>
					</form>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>











