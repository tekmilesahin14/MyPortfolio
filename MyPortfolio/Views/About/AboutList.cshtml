@model List<About>
@{
	ViewData["Title"] = "AboutList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımdakiler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımdakiler Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımdakiler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Detay</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.SubDescription</td>
										<td>@item.Details</td>
										<td><a href="/About/DeleteToAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
										<td><a href="/About/UpdateToAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/About/CreateToAbout/" class="btn btn-primary">Yeni Hakkımda Bilgi Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>






